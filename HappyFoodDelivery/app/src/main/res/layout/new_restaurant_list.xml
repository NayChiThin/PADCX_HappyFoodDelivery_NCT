<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/ivRestaurant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/restaurant"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cvRestaurant"
        android:text="@string/txt_restaurant_name"
        android:textSize="@dimen/text_regular_3x"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/tvRestaurantType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_restaurant_type"
        android:layout_below="@id/tvRestaurant"
        android:layout_toEndOf="@id/cvRestaurant"
        android:paddingTop="3dp"
        android:textSize="@dimen/text_regular"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="@dimen/margin_medium_2"/>
    <ImageView
        android:id="@+id/ivRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_24"
        android:layout_toEndOf="@id/cvRestaurant"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_below="@id/tvRestaurantType"/>
    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRestaurant"
        android:layout_toEndOf="@id/ivRating"
        android:text="@string/txt_rating"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@id/ivRating"
        android:paddingTop="3dp"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_alignBottom="@id/ivRating"/>
    <TextView
        android:id="@+id/tvRatingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_rating_count"
        android:layout_below="@id/tvRestaurant"
        android:layout_alignTop="@id/tvRating"
        android:layout_alignBottom="@id/tvRating"
        android:layout_toEndOf="@id/tvRating"
        android:textSize="@dimen/text_regular"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="@dimen/margin_small"
        android:paddingTop="3dp"/>
</RelativeLayout>