<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivLiveTracking"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/track"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_large"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tvLiveTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_heading_2x"
        android:textStyle="bold"
        android:layout_below="@id/ivLiveTracking"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_live_track"/>
    <TextView
        android:id="@+id/tvLiveTrackingDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLiveTracking"
        android:lines="2"
        android:textSize="@dimen/text_regular_3x"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_alignStart="@id/tvLiveTracking"
        android:layout_alignEnd="@id/tvLiveTracking"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_xxlarge_n"
        android:layout_marginStart="@dimen/margin_xxlarge_n"
        android:text="@string/txt_live_track_desc"/>
</RelativeLayout>