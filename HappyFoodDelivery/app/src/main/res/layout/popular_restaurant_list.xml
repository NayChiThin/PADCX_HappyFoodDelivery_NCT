<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvRestaurant"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginEnd="@dimen/margin_medium"
        app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/ivRestaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurant"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fast_burgers"
        android:layout_below="@id/cvRestaurant"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_small"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvRestaurantType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_restaurant_type"
        android:layout_below="@id/tvRestaurant"
        android:layout_alignTop="@id/tvRating"
        android:layout_alignBottom="@id/tvRating"
        android:paddingTop="3dp"
        android:textSize="@dimen/text_regular"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:textColor="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/ivRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_24"
        android:layout_below="@id/tvRestaurant"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_toEndOf="@id/tvRestaurantType"/>
    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRestaurant"
        android:layout_toEndOf="@id/ivRating"
        android:text="@string/txt_rating"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@id/ivRating"
        android:paddingTop="3dp"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_alignBottom="@id/ivRating"/>
</RelativeLayout>