<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RestaurantDetailActivity"
    android:background="@color/colorPrimaryDark">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    app:tint="@android:color/white"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium_2"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRestaurant"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/ivRestaurant"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/restaurant"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tvDeliverTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_deliver_time"
                    android:background="@drawable/rounded_textview"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="15dp"
                    android:paddingEnd="13dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="@android:color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/cvRestaurant"
                    android:layout_marginTop="@dimen/margin_card_medium_2_n"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:layout_marginBottom="@dimen/margin_medium_2"/>
            </RelativeLayout>
            <include
                layout="@layout/content_detail"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_below="@id/appbar"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>